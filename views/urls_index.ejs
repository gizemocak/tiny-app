<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <title>TinyApp</title>
</head>

<body style="font-size:20px; padding:50px;">
    <!-- Add EJS code here -->
    <h2><% include ./partials/_header.ejs %></h2>
    <%if (user) { %>
    <h4>My URLs</h4>
    <ul>
        <% Object.keys(urls).forEach(function(url){ %>
        <%  console.log(urls) %>
        <li>
            <%= url %> &#8594; <%= urls[url].longURL %>
            <a href="urls/<%= url %>" class="btn btn-link">Edit</a>
            <form method="POST" action="/urls/<%= url %>/delete">
                <input class="btn btn-outline-dark" type="submit" value="Delete">
            </form>
        </li>
        <% }); %>
    </ul>
    <% }  else { %>
    <p>Please Login or Register first!</p>
    <% } %>
</body>

</html>